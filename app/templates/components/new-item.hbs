{{#if addNewItem}}
  <div class="newItemForm">
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="type">Type</label>
        {{input value=type id="type" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        {{input value=price id="price" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image" class="form-control"}}
      </div>
      <div class="savebutton">
        <button {{action 'saveItem'}}>Save</button>
      </div>
    </form>
  </div>
{{else}}
  <button {{action 'itemFormShow'}}>New Item</button>
{{/if}}
<br>
